<h1>Users#new</h1>

<h3>This form uses regular AJAX and receives a JSON response</h3>
<%= form_for @user, url: users_path(format: "json"), html: {id: "ajax-form"}, remote: true do |f| %>
  <%= f.label :name, "Enter any ol' user name:" %>
  <br />
  <%= f.text_field :name %>
  <br />
  <%= f.submit "Create" %>
<% end %>
<%= tag.div id: "ajax-result-display" %>

<h3>This form uses regular AJAX and receives an HTML response</h3>
<%= form_for @user, url: users_path(format: "html"), html: {id: "ajax-html-form"}, remote: true do |f| %>
  <%= f.label :name, "Enter any ol' user name:" %>
  <br />
  <%= f.text_field :name %>
  <br />
  <%= f.submit "Create" %>
<% end %>
<%= tag.div id: "ajax-html-result-display" %>

<h3>This form uses Server-Generated JS</h3>
<%= form_for @user, url: {action: "create"}, html: {id: "sgj-form"}, remote: true do |f| %>
  <%= f.label :name, 'Enter any ol\' user name:' %>
  <br />
  <%= f.text_field :name %>
  <br />
  <%= f.submit "Create" %>
<% end %>
<%= tag.div id: "sgj-result-display" %>
